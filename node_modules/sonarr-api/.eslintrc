{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
    },
    "env": {
        "browser": false,
        "mocha": false,
        "node": true
    },
    "rules": {
        "indent": [2, 4],
        "consistent-return": 0,
        "max-len": [1, 120, 2, {
            "ignoreUrls": true,
            "ignoreComments": false
        }],
        "newline-per-chained-call": [2, {
            "ignoreChainWithDepth": 2
        }],
        "comma-dangle": 0,
        "no-use-before-define": 0,
        "import/no-unresolved": [2, {
            "ignore": ["electron"]
        }]
    }
}
